{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center align-items-center row row-cols-1 row-cols-md-3 mt-5">
            {% for categories in categorie %}
                <div class="bg-image hover-overlay ripple mt-5 card-anim" style="width: 20rem;--color: #fff" data-mdb-ripple-color="light">
                <div class="card mt-5 mx-auto">
                    <img class="card-img-top" src="{{ asset('assets/uploads/categories/') ~ categories.catImage }}" alt="Card image cap">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>

                </div>
                <div class="card-body text-white rounded-bottom">
                    <h4 class="card-title">{{ categories.catNom }}</h4>
                    <p class="card-text"></p>
                    <button type="button" class="button mb-3 btn-custom">Consulter</button>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <script>
        const buttons = document.querySelectorAll(".button");

        buttons.forEach(button => {
            button.addEventListener("click", (e) => {
                e.preventDefault();
                button.classList.add("animate");

                setTimeout(() => {
                    button.classList.remove("animate");
                }, 600)
            });
        });
    </script>
{% endblock %}
